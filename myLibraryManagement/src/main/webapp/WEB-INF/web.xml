	id="WebApp_ID" version="4.0">

	<display-name>myLibraryManagement</display-name>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>LogInFilter</filter-name>
		<filter-class>librarymanagment.filter.LogInFilter</filter-class>
